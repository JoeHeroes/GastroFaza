@model GastroFaza.Models.Client

@{
    ViewData["Title"] = "ProfileEdit";
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="profile_h2">ProfileEdit</h2>
            </div>
        </div>
    </div>


    <hr />
    <div class="row"> 
        <div class="col-md-4">
            <form class="edit_profile" method="post" action="@Url.Action("AccountSettings", "Account")">
                @ViewBag.msg
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label text-light"></label>
                    <input asp-for="FirstName" class="edit_profile_input" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label text-light"></label>
                    <input asp-for="LastName" class="edit_profile_input" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label text-light"></label>
                    <input asp-for="DateOfBirth" type="date" class="edit_profile_input" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nationality" class="control-label text-light"></label>
                    <input asp-for="Nationality" class="edit_profile_input" />
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
                <br />

                <div class="btn-group">
                    <div>
                        <input class="editProfileButton" type="submit" value="Save" />
                    </div>
                    <div style="padding:10px;">
                        <a href='@Url.Action("Profile", "Account")' class="editProfileButton">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br />
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
