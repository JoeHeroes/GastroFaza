@model GastroFaza.Models.DTO.PictureDto
@{
    ViewData["Title"] = "SelectPicture";
}

<h1>SelectPicture</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="SelectPicture" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-control">
                <label asp-for="PathPic" class="control-label"></label>
                <input asp-for="PathPic" class="form-control" />
                <span asp-validation-for="PathPic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='@Url.Action("Profile", "Account")' class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
