@model GastroFaza.Models.DTO.RestartPasswordDto

@{
    ViewData["Title"] = "RestartPassword";
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="profile_h2">Restart Password</h2>
            </div>
        </div>
    </div>




    <hr />
    <div class="row">
        <div class="col-md-4">
            <form class="edit_profile" method="post" action="@Url.Action("RestartPassword", "Account")">
                @ViewBag.msg
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label text-light"></label>
                    <input asp-for="OldPassword" class="edit_profile_input" type="password" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label text-light"></label>
                    <input asp-for="NewPassword" class="edit_profile_input" type="password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmNewPassword" class="control-label text-light"></label>
                    <input asp-for="ConfirmNewPassword" class="edit_profile_input" type="password" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Restart Password" class="edit_profile_save_button" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a href='@Url.Action("Profile", "Account")' class="edit_profile_back_button">Back</a>
    </div>
</body>