@model GastroFaza.Models.DTO.TableDto

@{
    ViewData["Title"] = "Add Table";
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
    <h2>Add New Table</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="@Url.Action("Create", "DiningTable")" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Seats" class="control-label text-light">Number of seats:</label>
                    <input asp-for="Seats" class="edit_profile_input" />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>
                <br /> <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="addToOrderButton" />
                </div>

                <div>
                    <a href='@Url.Action("SearchTable", "DiningTable")' class="addToOrderButton">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</body>