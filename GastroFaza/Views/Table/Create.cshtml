@model GastroFaza.Models.DTO.TableDto

@{
    ViewData["Title"] = "Add Table";
}

<h1>Add New Table</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="@Url.Action("Create", "Table")" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Seats" class="control-label">Liczba krzeseł:</label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <br /> <br />
            <div class="btn-group">
                <div class="form-group"style="padding: 10px;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div style="padding: 10px;">
                    <a href='@Url.Action("SearchTable", "Table")' class="btn btn-primary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>