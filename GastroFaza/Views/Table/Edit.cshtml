@model GastroFaza.Models.DiningTable
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Table</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
           
            <div class="btn-group">
                <div class="form-group" style="padding: 10px;">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div style="padding: 10px;">
                    <a href='@Url.Action("GetAllOrders", "Table")' class="btn btn-primary">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
