@model GastroFaza.Models.Worker
@{
    ViewData["Title"] = "Rate Worker";

}

<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rating.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <h2>Rate Worker</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="@Url.Action("RateWorker", "Worker")" enctype="multipart/form-data">
                <div class="form-group rating">
                    <input type="radio" name="newRating" id="1" value=5><label for="1"></label>
                    <input type="radio" name="newRating" id="2" value=4><label for="2"></label>
                    <input type="radio" name="newRating" id="3" value=3><label for="3"></label>
                    <input type="radio" name="newRating" id="4" value=2><label for="4"></label>
                    <input type="radio" name="newRating" id="5" value=1><label for="5"></label>
                </div>

                <div class="btn-group">
                    <div class="form-group" style="padding: 10px;">
                        <input type="submit" value="Save" class="btn btn-primary addToOrderButton" />
                    </div>
                    <div style="padding: 10px;">
                        <a href='@Url.Action("GetAll", "Worker")' class="btn btn-primary addToOrderButton">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>