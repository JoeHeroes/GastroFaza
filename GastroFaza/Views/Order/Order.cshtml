@model IEnumerable<Dish>
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Order";
}

<style>
    #table {
        width ="150";
        height ="250";
    }
</style>

<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Orders</h2>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
</div>
<br />
<br />
<br />
<div style="float:left">
    <div style="float:left">

        @foreach (var obj in Model )
        {
            <table class="table table-bordered" id=table>
                <tr>
                    <th>
                        @obj.Name
                        <br />
                        <br />
                        @obj.Price
                        <br />
                        <br />
                        <a href='@Url.Action("RemoveDishFromOrder", "Order", @obj, null)' class="btn btn-primary">Remove From Order</a>
                    </th>
                </tr>
            </table>
        }
    </div>


     @if (@HttpContextAccessor.HttpContext.Session.GetString("email") != null)
        {
            <div style="float:left">
                <a href='@Url.Action("GetAll", "Dish")' class="btn btn-primary">Add To Order</a>
            </div>
            <div style="float:right">
                <a href='@Url.Action("PayForOrder", "Order")' class="btn btn-primary">Pay for order</a>
            </div>
        }
        else
        {
            <div style="float:left">
                <a href='@Url.Action("Login", "Account")' class="btn btn-primary">Login To Order</a>
            </div>
        }
</div>