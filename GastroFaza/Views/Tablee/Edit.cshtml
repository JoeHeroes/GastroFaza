@model GastroFaza.Models.DTO.TableDto

@{
    ViewData["Title"] = "Edit Table";
}
<h1>Edit Table</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="@Url.Action("Edit", "Tablee")" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Seats" class="control-label">Liczba krzeseł:</label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <br /> <br />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>