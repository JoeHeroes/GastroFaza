@model GastroFaza.Models.DTO.ReservationDto
@{
    ViewData["Title"] = "Choice Tabel";
}

<h1>Choice Tabel</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="@Url.Action("Create", "Reservation")" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="DateOfReservation" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="HourOfReservation" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TableId" class="control-label"></label>
                <select asp-items=Model.TableSelect asp-for="TableId" class="form-select"></select>
                <span asp-validation-for="TableId" class="text-danger"></span>
            </div>
            <br /> <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>