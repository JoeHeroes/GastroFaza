@model GastroFaza.Models.DTO.ReservationDto

@{
    ViewData["Title"] = "Choice Data";
    var minDate = DateTime.Now.AddDays(1).ToString("yyyy-MM-dd");
}
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
</head>
<body>
<h2>Choice Data</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="@Url.Action("Choice", "Reservation")" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DateOfReservation" class="control-label text-light">Data rezerwacji:</label>
                    <input asp-for="DateOfReservation" class="edit_profile_input" type="date" />
                    <span asp-validation-for="DateOfReservation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HourOfReservation" class="control-label text-light">Godzina rezerwacji:</label>
                    <select asp-for="HourOfReservation" class="select_list">
                        <option value="8:00">8:00</option>
                        <option value="8:30">8:30</option>
                        <option value="9:00">9:00</option>
                        <option value="9:30">9:30</option>
                        <option value="10:00">10:00</option>
                        <option value="10:30">10:30</option>
                        <option value="11:00">11:00</option>
                        <option value="11:30">11:30</option>
                        <option value="12:00">12:00</option>
                        <option value="12:30">12:30</option>
                        <option value="13:00">13:00</option>
                        <option value="13:30">13:30</option>
                        <option value="14:00">14:00</option>
                        <option value="14:30">14:30</option>
                        <option value="15:00">15:00</option>
                        <option value="15:30">15:30</option>
                        <option value="16:00">16:00</option>
                        <option value="16:30">16:30</option>
                        <option value="17:00">17:00</option>
                        <option value="18:30">17:30</option>
                        <option value="18:00">18:00</option>
                        <option value="18:30">18:30</option>
                        <option value="19:00">19:00</option>
                        <option value="19:30">19:30</option>
                        <option value="20:00">20:00</option>
                        <option value="20:30">20:30</option>
                        <option value="21:00">21:00</option>
                        <option value="21:30">21:30</option>
                        <option value="22:00">22:00</option>
                        <option value="22:30">22:30</option>
                    </select>
                    <span asp-validation-for="HourOfReservation" class="text-danger"></span>
                </div>
                <br /> <br />
                <div class="form-group">
                
                </div>


                <div class="btn-group">
                    <div class="form-group"style="padding: 10px;">
                        <input type="submit" value="Check" class="edit_profile_save_button" />
                    </div>
                    <div style="padding: 10px;">
                        <a href='@Url.Action("GetAll", "Reservation")' class="edit_profile_back_button">Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</body>